@using System.IO
@inject Lotto649Service lotto649Service
@inject LottoMaxService lottoMaxService
@inject PowerBallService powerBallService

<div class="topnavbar">
    <div class="logo-container">
        <a class="home-link">LotterySharper</a>
    </div>
    <div class="topnav-links">
        <div class="btn-group" style="width:100%">
            <button style="width:33.3%" type="button" id="app-btn" class="dropdown-btn">
                Lotto649
                <div id="menu" class="topdropdown-menu">

                    <a class="menu-link" @onclick="OnClick649Async">Lotto 649 Results</a>
                    <a class="menu-link" @onclick="OnClick649SinglesAsync">Lotto 649 Single-Number Frequency</a>
                    <a class="menu-link" @onclick="OnClick649PairsAsync">Lotto 649 Pairs Frequency</a>
                    <a class="menu-link" @onclick="OnClick649TripletsAsync">Lotto 649 Triplets Frequency</a>
                    <a class="menu-link" @onclick="OnClick649BonusAsync">Lotto 649 Bonus Number Frequency</a>
                </div>
            </button>
            <button style="width:33.3%" type="button" id="app-btn" class="dropdown-btn">
                LottoMax
                <div id="menu" class="topdropdown-menu" style="margin-left:-33.3%">
                    <a class="menu-link" @onclick="OnClickMaxAsync">Lotto Max Results</a>
                    <a class="menu-link" @onclick="OnClickMaxSinglesAsync">Lotto Max Single-Number Frequency</a>
                    <a class="menu-link" @onclick="OnClickMaxPairsAsync">Lotto Max Pairs Frequency</a>
                    <a class="menu-link" @onclick="OnClickMaxTripletsAsync">Lotto Max Triplets Frequency</a>
                    <a class="menu-link" @onclick="OnClickMaxBonusAsync">Lotto Max Bonus Number Frequency</a>
                </div>
            </button>
            <button style="width:33.3%" type="button" id="app-btn" class="dropdown-btn">
                US Powerball
                <div id="menu" class="topdropdown-menu" style="margin-left:-66.6%">
                    <a class="menu-link" @onclick="OnClickPowerBallAsync">Powerball Results</a>
                    <a class="menu-link" @onclick="OnClickPowerBallSinglesAsync">Powerball Single-Number Frequency</a>
                    <a class="menu-link" @onclick="OnClickPowerBallPairsAsync">Powerball Pairs Frequency</a>
                    <a class="menu-link" @onclick="OnClickPowerBallTripletsAsync">Powerball Triplets Frequency</a>
                    <a class="menu-link" @onclick="OnClickPowerBallBonusAsync">Powerball Bonus Number Frequency</a>
                </div>
            </button>
        </div>
    </div>
</div>
