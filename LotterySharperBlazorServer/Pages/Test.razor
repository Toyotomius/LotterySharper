@using System.IO;
@using System.Linq;
@using System.Text;
@using System.Text.Json;

@page "/test"
<h1>This is a Test</h1>
<p>Index?</p>
<Index />
<p>Table?</p>
@if (lotto == null)
{
    <p><em>Why null?</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Winning Numbers</th>
                <th>Bonus</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var itm in lotto.Lotto649)
            {
                <tr>
                    <td>@itm.Date</td>
                    <td>@FormatNumbers(itm)</td>
                    <td>@itm.Bonus</td>
                </tr>
            }
        </tbody>
    </table>


}

@code {

    Lotto lotto;

    protected override async Task OnInitializedAsync()
    {

        var lottoJsonString = await File.ReadAllTextAsync("sample-data/Lotto649.json");
        lotto = JsonSerializer.Deserialize<Lotto>(lottoJsonString);

    }

    private string FormatNumbers(LottoData itm)
    {
        var sb = new StringBuilder();
        foreach(var i in itm.Numbers)
        {
            sb.Append($"{i} ");
        }
        return sb.ToString();
    }

    public class Lotto
    {
        public List<LottoData> Lotto649 { get; set; }

    }
    public class LottoData
    {
        public string Date { get; set; }
        public List<int> Numbers { get; set; }
        public int Bonus { get; set; }
    }
}
