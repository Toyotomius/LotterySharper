@using LotterySharperBlazorServer.Shared.Models;
@using BlazorTable

@if (_lottoSingles == null)
{

}
else
{
    <header style="font-size:40px">
        @_lotteryName Singles Frequency
        <hr />
    </header>
    <Table TableItem="LottoSinglesCount" Items="_lottoSingles" PageSize="10">
        <Column TableItem="LottoSinglesCount" Title="Number" Field="@(x => x.First)" Sortable="true" Filterable="true" Width="33%" />
        <Column TableItem="LottoSinglesCount" Title="Frequency" Field="@(x => x.Frequency)" Sortable="true" Filterable="true" Width="33%" />

        <Pager TableItem="LottoSinglesCount" ShowPageNumber="true" ShowTotalCount="true" />
    </Table>

}

@code{
    [Parameter]
    public List<LottoSinglesCount> _lottoSingles { get; set; }
    [Parameter]
    public string _lotteryName { get; set; }
}
